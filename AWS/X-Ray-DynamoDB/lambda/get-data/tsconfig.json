{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "typeRoots": [ "node_modules/@types"],
    "types": [ "node" ],
    "baseUrl": "./"
  },
  "include": [ "*.ts" ]
}
